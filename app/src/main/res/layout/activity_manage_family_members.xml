<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".ManageFamilyMembersActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFamilyMembers"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edAddFamilyMember"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="New Family member"
        app:layout_constraintEnd_toStartOf="@+id/btnAddFamilyMember"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvFamilyMembers" />

    <Button
        android:id="@+id/btnAddFamilyMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edAddFamilyMember"
        app:layout_constraintTop_toBottomOf="@+id/rvFamilyMembers" />
</androidx.constraintlayout.widget.ConstraintLayout>